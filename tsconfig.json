{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "pretty": true,
        "removeComments": false,
        "inlineSourceMap": true,
        "outDir": "./lib",
        "esModuleInterop": true,
        "lib": [ "ES2017", "ES2018", "ES2019" ],
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}
